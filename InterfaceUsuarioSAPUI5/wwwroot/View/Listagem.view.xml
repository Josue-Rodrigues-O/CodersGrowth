<mvc:View
	controllerName="controle.funcionarios.controller.Listagem"
	xmlns="sap.ui.webc.main"
	xmlns:mvc="sap.ui.core.mvc">
	<Panel>
		<Table
			id="TabelaFuncionarios"
			stickyColumnHeader="true"
			rowClick="handleRowClick"
			mode="SingleSelect"
			selectionChange="handleSelectionChange"
			rows="{
					path: '/FUNCIONARIOS'
				}">
			<columns>
				<TableColumn>
					<Label text="ID" />
				</TableColumn>
				<TableColumn>
					<Label text="Nome" />
				</TableColumn>
				<TableColumn>
					<Label text="CPF" />
				</TableColumn>
				<TableColumn>
					<Label text="Telefone" />
				</TableColumn>
				<TableColumn>
					<Label text="Salário" />
				</TableColumn>
				<TableColumn>
					<Label text="Casado?" />
				</TableColumn>
				<TableColumn>
					<Label text="Data de Nascimento" />
				</TableColumn>
				<TableColumn>
					<Label text="Gênero" />
				</TableColumn>
			</columns>
			<rows>
				<TableRow type="Active">
					<cells>
						<TableCell>
							<content>
								<Label text="{id}" />
							</content>
						</TableCell>
						<TableCell>
							<content>
								<Label text="{nome}" />
							</content>
						</TableCell>
						<TableCell>
							<content>
								<Label text="{cpf}" />
							</content>
						</TableCell>
						<TableCell>
							<content>
								<Label text="{telefone}" />
							</content>
						</TableCell>
						<TableCell>
							<content>
								<Label text="{salario}" />
							</content>
						</TableCell>
						<TableCell>
							<content>
								<Label text="{ehCasado}" />
							</content>
						</TableCell>
						<TableCell>
							<content>
								<Label text="{dataNascimento}" />
							</content>
						</TableCell>
						<TableCell>
							<content>
								<Label text="{genero}" />
							</content>
						</TableCell>
					</cells>
				</TableRow>
			</rows>
		</Table>
	</Panel>
</mvc:View>