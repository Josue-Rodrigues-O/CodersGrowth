<mvc:View
	controllerName="controle.funcionarios.controller.Listagem"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Panel accessibleRole="Region">
		<Table
			id="TabelaFuncionarios"
			width="auto"
			items="{
				path : 'TabelaFuncionarios>/',
				sorter : {
					path : 'id',
					group : false
				}
			}">
			<columns>
				<Column
					hAlign="Center">
					<Text text="{i18n>TituloColunaId}" />
				</Column>
				<Column
					hAlign="Center">
					<Text text="{i18n>TituloColunaNome}" />
				</Column>
				<Column
					hAlign="Center">
					<Text text="{i18n>TituloColunaCpf}" />
				</Column>
				<Column
					hAlign="Center">
					<Text text="{i18n>TituloColunaTelefone}" />
				</Column>
				<Column
					hAlign="Center">
					<Text text="{i18n>TituloColunaSalario}" />
				</Column>
				<Column
					hAlign="Center">
					<Text text="{i18n>TituloColunaEhCasado}" />
				</Column>
				<Column
					hAlign="Center">
					<Text text="{i18n>TituloColunaGenero}" />
				</Column>
				<Column
					hAlign="Center">
					<Text text="{i18n>TituloColunaDataNascimento}" />
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<ObjectIdentifier title="{TabelaFuncionarios>id}" />
						<ObjectIdentifier title="{TabelaFuncionarios>nome}" />
						<ObjectIdentifier title="{TabelaFuncionarios>cpf}" />
						<Text text="{TabelaFuncionarios>telefone}" />
						<ObjectNumber
							number="{
								parts: [
									'TabelaFuncionarios>salario',
									'view>/currency'
								],
								type: 'sap.ui.model.type.Currency',
								formatOptions: {
									showMeasure: false
								}
							}"
							unit="{view>/currency}" />
						<Text
							text="{
							parts: [
								'TabelaFuncionarios>ehCasado',
								'i18n>sim',
								'i18n>nao'
							],
							formatter: '.formatter.estadoCivilText'
						}" />
						<Text
							text="{
							parts: [
								'TabelaFuncionarios>genero',
								'i18n>indefinido',
								'i18n>masculino',
								'i18n>feminino'
							],
							formatter: '.formatter.generoText'
						}" />
						<Text
							text="{
							path: 'TabelaFuncionarios>dataNascimento',
							type: 'sap.ui.model.type.Date',
							formatOptions: {
								style: 'short',
								source: {
								pattern: 'yyyy-MM-ddTHH:mm:ss'
								}
							}
                    	}" />
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Panel>
</mvc:View>