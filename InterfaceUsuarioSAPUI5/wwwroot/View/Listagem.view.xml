<mvc:View
	controllerName="controle.funcionarios.Controller.Listagem"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Panel accessibleRole="Region">
		<Table
			class="sapUiResponsiveMargin"
			width="auto"
			items="{tabelinha>/}">
			<columns>
				<Column>
					<Text text="{i18n>TituloColunaId}" />
				</Column>
				<Column>
					<Text text="{i18n>TituloColunaNome}" />
				</Column>
				<Column>
					<Text text="{i18n>TituloColunaCpf}" />
				</Column>
				<Column>
					<Text text="{i18n>TituloColunaTelefone}" />
				</Column>
				<Column>
					<Text text="{i18n>TituloColunaSalario}" />
				</Column>
				<Column>
					<Text text="{i18n>TituloColunaEhCasado}" />
				</Column>
				<Column>
					<Text text="{i18n>TituloColunaGenero}" />
				</Column>
				<Column>
					<Text text="{i18n>TituloColunaDataNascimento}" />
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<Text text="{tabelinha>id}" />
						<Text text="{tabelinha>nome}" />
						<Text text="{tabelinha>cpf}" />
						<Text text="{tabelinha>telefone}" />
						<Text text="{tabelinha>salario}" />
						<Text text="{tabelinha>ehCasado}" />
						<Text text="{tabelinha>genero}" />
						<Text text="{tabelinha>dataNascimento}" />
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Panel>
</mvc:View>