<mvc:View
	controllerName="controle.funcionarios.controller.Listagem"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Panel
		class="sapUiResponsiveMargin"
		width="auto"
		accessibleRole="Region">
		<headerToolbar>
			<Toolbar>
				<Button
					icon="sap-icon://add"
					text="{i18n>btnAdicionar}"
					press=".Ao_Clicar_Abre_Tela_De_Cadastro" />
				<ToolbarSpacer />
				<SearchField
					width="50%"
					search=".Filtro_Da_Tela_De_Listagem" />
			</Toolbar>
		</headerToolbar>
		<Table
			id="TabelaFuncionarios"
			width="auto"
			items="{
				path : 'TabelaFuncionarios>/',
				sorter : {
					path : 'id',
					group : false
				}
			}">
			<columns>
				<Column
					hAlign="Center"
					width="3rem">
					<Text text="{i18n>TituloColunaId}" />
				</Column>
				<Column
					hAlign="Center">
					<Text text="{i18n>TituloColunaNome}" />
				</Column>
				<Column
					hAlign="Center">
					<Text text="{i18n>TituloColunaCpf}" />
				</Column>
				<Column
					hAlign="Center">
					<Text text="{i18n>TituloColunaTelefone}" />
				</Column>
				<Column
					hAlign="Center">
					<Text text="{i18n>TituloColunaSalario}" />
				</Column>
				<Column
					hAlign="Center"
					width="9rem">
					<Text text="{i18n>TituloColunaEhCasado}" />
				</Column>
				<Column
					hAlign="Center">
					<Text text="{i18n>TituloColunaGenero}" />
				</Column>
				<Column
					hAlign="Center">
					<Text text="{i18n>TituloColunaDataNascimento}" />
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<ObjectIdentifier title="{TabelaFuncionarios>id}" />
						<ObjectIdentifier title="{TabelaFuncionarios>nome}" />
						<ObjectIdentifier title="{TabelaFuncionarios>cpf}" />
						<Text text="{TabelaFuncionarios>telefone}" />
						<ObjectNumber
							number="{
								parts: [
									'TabelaFuncionarios>salario',
									'view>/currency'
								],
								type: 'sap.ui.model.type.Currency',
								formatOptions: {
									showMeasure: false
								}
							}"
							unit="{view>/currency}" />
						<Text
							text="{
							path: 'TabelaFuncionarios>ehCasado',
							formatter: '.formatter.estadoCivilText'
						}" />
						<Text
							text="{
							path: 'TabelaFuncionarios>genero',
							formatter: '.formatter.generoText'
						}" />
						<Text
							text="{
							path: 'TabelaFuncionarios>dataNascimento',
							type: 'sap.ui.model.type.Date',
							formatOptions: {
								style: 'short',
								source: {
								pattern: 'yyyy-MM-ddTHH:mm:ss'
								}
							}
                    	}" />
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Panel>
</mvc:View>