<mvc:View
	controllerName="controle.funcionarios.controller.Listagem"
	xmlns="sap.ui.webc.main"
	xmlns:mvc="sap.ui.core.mvc">
	<Panel>
		<Table
			id="TabelaFuncionarios"
			stickyColumnHeader="true"
			rowClick="handleRowClick"
			mode="SingleSelect"
			selectionChange="handleSelectionChange"
			rows="{
					path: '/FUNCIONARIOS',
					sorter: {
						path: 'id'
					}
				}">
			<columns>
				<TableColumn>
					<Label text="{i18n>TituloColunaId}" />
				</TableColumn>
				<TableColumn>
					<Label text="{i18n>TituloColunaNome}" />
				</TableColumn>
				<TableColumn>
					<Label text="{i18n>TituloColunaCpf}" />
				</TableColumn>
				<TableColumn>
					<Label text="{i18n>TituloColunaTelefone}" />
				</TableColumn>
				<TableColumn>
					<Label text="{i18n>TituloColunaSalario}" />
				</TableColumn>
				<TableColumn>
					<Label text="{i18n>TituloColunaEhCasado}" />
				</TableColumn>
				<TableColumn>
					<Label text="{i18n>TituloColunaDataNascimento}" />
				</TableColumn>
				<TableColumn>
					<Label text="{i18n>TituloColunaGenero}" />
				</TableColumn>
			</columns>
			<rows>
				<TableRow type="Active">
					<cells>
						<TableCell>
							<content>
								<Label text="{id}" />
							</content>
						</TableCell>
						<TableCell>
							<content>
								<Label text="{nome}" />
							</content>
						</TableCell>
						<TableCell>
							<content>
								<Label text="{cpf}" />
							</content>
						</TableCell>
						<TableCell>
							<content>
								<Label text="{telefone}" />
							</content>
						</TableCell>
						<TableCell>
							<content>
								<Label text="{salario}" />
							</content>
						</TableCell>
						<TableCell>
							<content>
								<Label text="{ehCasado}" />
							</content>
						</TableCell>
						<TableCell>
							<content>
								<Label text="{dataNascimento}" />
							</content>
						</TableCell>
						<TableCell>
							<content>
								<Label text="{genero}" />
							</content>
						</TableCell>
					</cells>
				</TableRow>
			</rows>
		</Table>
	</Panel>
</mvc:View>