<mvc:View
	controllerName="controle.funcionarios.controller.Listagem"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<Panel
		class="sapUiResponsiveMargin"
		width="auto"
		accessibleRole="Region">
		<headerToolbar>
			<Toolbar
				style="Clear"
				class="sapUi-Std-PaddingS">
				<Button
					type="Ghost"
					icon="sap-icon://add"
					text="{i18n>botaoAdicionar}"
					press=".aoClicarAbreTelaDeCadastro" />
				<ToolbarSpacer />
				<SearchField
					width="40%"
					search=".aoPesquisarFiltrarFuncionarios" />
			</Toolbar>
		</headerToolbar>
		<Table
			growing="true"
			growingThreshold="11"
			growingScrollToLoad="true"
			showSeparators="Inner"
			id="IdTabelaFuncionarios"
			width="auto"
			items="{
				path : 'ModeloTabelaFuncionarios>/',
				sorter : {
					path : 'id',
					group : false
				}
			}">
			<columns>
				<Column
					hAlign="Center"
					width="5rem">
					<header>
						<Text text="{i18n>TituloColunaId}" />
					</header>
				</Column>
				<Column
					hAlign="Center">
					<header>
						<Text text="{i18n>TituloColunaNome}" />
					</header>
				</Column>
				<Column
					hAlign="Center">
					<header>
						<Text text="{i18n>TituloColunaCpf}" />
					</header>
				</Column>
				<Column
					hAlign="Center">
					<header>
						<Text text="{i18n>TituloColunaTelefone}" />
					</header>
				</Column>
				<Column
					hAlign="Center">
					<header>
						<Text text="{i18n>TituloColunaSalario}" />
					</header>
				</Column>
				<Column
					hAlign="Center"
					width="6rem">
					<header>
						<Text text="{i18n>TituloColunaEhCasado}" />
					</header>
				</Column>
				<Column
					hAlign="Center">
					<header>
						<Text text="{i18n>TituloColunaGenero}" />
					</header>
				</Column>
				<Column
					hAlign="Center">
					<header>
						<Text text="{i18n>TituloColunaDataNascimento}" />
					</header>
				</Column>
			</columns>
			<items>
				<ColumnListItem
					type="Navigation"
					press=".aoClicarAbrirDetails">
					<cells>
						<ObjectIdentifier
							badgePeople="true"
							title="{ModeloTabelaFuncionarios>id}" />
						<ObjectIdentifier title="{ModeloTabelaFuncionarios>nome}" />
						<ObjectIdentifier title="{ModeloTabelaFuncionarios>cpf}" />
						<Text text="{ModeloTabelaFuncionarios>telefone}" />
						<ObjectNumber
							number="{
								parts: [
									'ModeloTabelaFuncionarios>salario',
									'ModeloSalario>/currency'
								],
								type: 'sap.ui.model.type.Currency',
								formatOptions: {
									currencyCode:false,
									showMeasure: true
								}
							}" />
						<Text
							text="{
							path: 'ModeloTabelaFuncionarios>ehCasado',
							formatter: '.formatter.estadoCivilText'
						}" />
						<Text
							text="{
							path: 'ModeloTabelaFuncionarios>genero',
							formatter: '.formatter.generoText'
						}" />
						<Text
							text="{
							path: 'ModeloTabelaFuncionarios>dataNascimento',
							type: 'sap.ui.model.type.Date',
							formatOptions: {
								style: 'short',
								source: {
								pattern: 'yyyy-MM-ddTHH:mm:ss'
								}
							}
                    	}" />
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Panel>
</mvc:View>