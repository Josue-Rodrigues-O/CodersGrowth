<mvc:View
    controllerName="controle.funcionarios.controller.Cadastro"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns:mvc="sap.ui.core.mvc">
    <Page>
        <customHeader>
            <Toolbar>
                <Button type="Back" press=".aoClicarEmVoltar" />
                <ToolbarSpacer />
                <Title text="{i18n>tituloPaginaCriacao}" />
                <ToolbarSpacer />
                <Button
                    icon="sap-icon://save"
                    text="{i18n>botaoSalvar}"
                    type="Transparent"
                    press=".aoClicarEmSalvar" />
                <Button
                    icon="sap-icon://decline"
                    text="{i18n>botaoCancelar}"
                    type="Transparent"
                    press=".aoClicarEmCancelar" />
            </Toolbar>
        </customHeader>
        <HBox class="sapUiMediumMargin">
            <VBox class="sapUiMediumMargin" width="100%">
                <Label
                    showColon="true"
                    text="{i18n>TituloColunaNome}"
                    labelFor="inputNome" />
                <Input
                    value="{/nome}"
                    class="sapUiTinyMarginTop"
                    placeholder="{i18n>placeholderNome}"
                    id="inputNome"
                    required="true" />
                <Label
                    showColon="true"
                    class="sapUiTinyMarginTop"
                    text="{i18n>TituloColunaCpf}"
                    labelFor="inputCpf" />
                <MaskInput
                    value="{/cpf}"
                    class="sapUiTinyMarginTop"
                    placeholder="{i18n>placeholderCpf}"
                    id="inputCpf"
                    required="true"
                    mask="999.999.999-99"
                    width="100%" />
                <Label
                    showColon="true"
                    class="sapUiTinyMarginTop"
                    text="{i18n>TituloColunaTelefone}"
                    labelFor="inputTelefone" />
                <MaskInput
                    value="{/telefone}"
                    class="sapUiTinyMarginTop"
                    placeholder="{i18n>placeholderTelefone}"
                    id="inputTelefone"
                    required="true"
                    mask="(99) 9 9999-9999"
                    width="100%" />
                <Label
                    showColon="true"
                    class="sapUiTinyMarginTop"
                    text="{i18n>TituloColunaSalario}"
                    labelFor="inputSalario" />
                <Input
                    value="{/salario}"
                    type="Number"
                    class="sapUiTinyMarginTop"
                    placeholder="{i18n>placeholderSalario}"
                    id="inputSalario"
                    required="true" />
                <HBox>
                    <VBox
                        width="63%">
                        <Label
                            showColon="true"
                            text="{i18n>TituloColunaGenero}"
                            labelFor="inputGenero" />
                        <Select
                            required="true"
                            width="100%"
                            class="sapUiTinyMarginTop"
                            id="inputGenero"
                            selectedKey="{/genero}">
                            <core:Item key="0" text="{i18n>indefinido}" />
                            <core:Item key="1" text="{i18n>masculino}" />
                            <core:Item key="2" text="{i18n>feminino}" />
                        </Select>
                    </VBox>

                    <VBox>
                        <Label
                            showColon="true"
                            class="sapUiTinyMarginTop"
                            text="{i18n>TituloColunaEstadoCivil}"
                            labelFor="grupoEstadoCivil"
                            required="true" />
                        <RadioButtonGroup
                            id="grupoEstadoCivil"
                            columns="2">
                            <RadioButton
                                id="solteiro"
                                text="{i18n>solteiro}" />
                            <RadioButton
                                selected="{/ehCasado}"
                                text="{i18n>casado}" />
                        </RadioButtonGroup>
                    </VBox>
                </HBox>
            </VBox>
            <VBox class="sapUiMediumMargin">
                <Label
                    required="true"
                    class="sapUiTinyMarginTop"
                    showColon="true"
                    text="{i18n>TituloColunaDataNascimento}"
                    labelFor="calendarDataNascimento" />
                <u:Calendar
                    id="calendarDataNascimento"
                    select="diaSelecionado" />
            </VBox>
        </HBox>
    </Page>
</mvc:View>