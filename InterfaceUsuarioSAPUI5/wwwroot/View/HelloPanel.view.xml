<mvc:View
    controllerName="controle.funcionarios.controller.HelloPanel"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Panel
        class="sapUiResponsiveMargin"
        width="auto"
        expandable="{device>/system/phone}"
        expanded="{= !${device>/system/phone} }"
        accessibleRole="Region">
            
        <headerToolbar>
            <Toolbar>
                <Button
                icon="sap-icon://add"
                text="{i18n>btnAdicionar}"
                press=".onMostrarOla"/>
                <ToolbarSpacer />
                <SearchField
                    width="50%"
                    search=".onFilterInvoices" />
            </Toolbar>
        </headerToolbar>
    </Panel>
</mvc:View>